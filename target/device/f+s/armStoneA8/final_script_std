#!/bin/sh

TARGET="$1"
LOCAL=target/device/f+s/armStoneA8
CP="/bin/cp -f"

tput smso
echo ">>>   Doing final armStoneA8 setup for standard configuration"
tput rmso

# Copy the modified inittab file with mdev support
${CP} ${LOCAL}/inittab ${TARGET}/etc

# Copy the enhanced mdev configuration file
${CP} ${LOCAL}/mdev.conf ${TARGET}/etc

# Copy the hdmicfg script and startup script
${CP} ${LOCAL}/hdmicfg ${TARGET}/sbin
${CP} ${LOCAL}/S17hdmicfg ${TARGET}/etc/init.d

# Copy the x11 start script
${CP} ${LOCAL}/S35x11 ${TARGET}/etc/init.d
