comment "F&S board support for Silex WLAN needs a Linux kernel to be built"
	depends on !BR2_LINUX_KERNEL

config BR2_PACKAGE_SILEX_WLAN_FS
	bool "F&S board support for Silex WLAN"
	depends on BR2_LINUX_KERNEL
	help
	  Add kernel modules and firmware files to support the Silex WLAN
	  on F&S boards and modules. These files are closed-source and only
	  work for the appropriate kernel version.

comment "Remove regular wpa_supplicant to have Silex version here"
	depends on BR2_PACKAGE_SILEX_WLAN_FS
	depends on BR2_PACKAGE_WPA_SUPPLICANT

config BR2_PACKAGE_SILEX_WLAN_FS_WPA_SUPPLICANT
	bool "Add Silex specific wpa_supplicant/wpa_cli/wpa_passphrase"
	depends on BR2_PACKAGE_SILEX_WLAN_FS
	depends on !BR2_PACKAGE_WPA_SUPPLICANT
	default y
	help
	  The Silex WLAN driver is only certified for a different version of
	  wpa_supplicant. Add this version to the system.

comment "Remove regular hostapd to have Silex version here"
	depends on BR2_PACKAGE_SILEX_WLAN_FS
	depends on BR2_PACKAGE_HOSTAPD

config BR2_PACKAGE_SILEX_WLAN_FS_HOSTAPD
	bool "Add Silex specific hostapd/hostapd_cli"
	depends on BR2_PACKAGE_SILEX_WLAN_FS
	depends on !BR2_PACKAGE_HOSTAPD
	default y
	help
	  The Silex WLAN driver is only certified for a different version of
	  hostapd. Add this version to the system.
