diff -uNr webkitgtk-1.11.92/Source/autotools/FindDependencies.m4 webkit-1.11.92-work/Source/autotools/FindDependencies.m4
--- webkitgtk-1.11.92/Source/autotools/FindDependencies.m4	2013-03-18 10:50:52.000000000 +0100
+++ webkit-1.11.92-work/Source/autotools/FindDependencies.m4	2015-11-27 19:55:32.119894714 +0100
@@ -186,6 +186,13 @@
 AC_SUBST(CAIRO_CFLAGS)
 AC_SUBST(CAIRO_LIBS)
 
+# check wheter to build tests
+AC_MSG_CHECKING([wheter to build tests])
+AC_ARG_ENABLE(tests,
+              AC_HELP_STRING([--enable-tests],
+                             [turn on tests [default=no]]),
+              [],[enable_debug="no"])
+AC_MSG_RESULT([$enable_tests])
 
 found_opengl=no
 have_glx=no
@@ -371,6 +378,15 @@
     PKG_CHECK_MODULES([FREETYPE],
         [cairo-ft fontconfig >= fontconfig_required_version freetype2 >= freetype2_required_version harfbuzz >= harfbuzz_required_version])
 fi
+
+# HarfBuzz 0.9.18 splits harbuzz-icu into a separate library. 
+# Since we support earlier HarfBuzz versions we keep this conditional for now. 
+if $PKG_CONFIG --atleast-version 0.9.18 harfbuzz; then 
+    PKG_CHECK_MODULES(HARFBUZZ_ICU, harfbuzz-icu >= $harfbuzz_required_version) 
+    FREETYPE_CFLAGS+=" $HARFBUZZ_ICU_CFLAGS" 
+    FREETYPE_LIBS+=" $HARFBUZZ_ICU_LIBS" 
+fi
+
 AC_SUBST([FREETYPE_CFLAGS])
 AC_SUBST([FREETYPE_LIBS])
 
